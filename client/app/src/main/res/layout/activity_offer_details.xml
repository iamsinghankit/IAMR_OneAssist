<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/colorPrimaryDark"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:id="@+id/img_merchant_image"
                android:src="@mipmap/ic_launcher"
                android:layout_width="80dp"
                android:layout_height="80dp" />
        <TextView
            android:id="@+id/textViewMerchantName"
            android:layout_below="@+id/img_merchant_image"
            android:layout_centerInParent="true"
            android:textColor="@color/color_black"
            android:textSize="21dp"
            android:textStyle="normal"
            android:paddingTop="10dp"
            android:text="Palace Heights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textViewValid2"
                android:textColor="#FFFFFF"
                android:textSize="12dp"
                android:padding="5dp"

                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:text=""
                android:layout_width="190dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textViewValid1"
                android:textColor="#ffffff"
                android:textSize="9dp"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:text="Offer validity: 28th February 2018"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
</LinearLayout>